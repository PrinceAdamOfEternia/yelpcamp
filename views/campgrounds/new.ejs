<% include ../partials/header %>

    <div class="container">
        <h1 class="form-header">Create a new campground</h1>
        <div class="yelp-form">
            <form action="/campgrounds" method="POST">
                <input class="form-control yelp-form-control" 
                    type="text" name="name" placeholder="name">
                <input class="form-control yelp-form-control" 
                    type="number" name="price" placeholder="price/night" min="0.00" step="0.10">
                <input class="form-control yelp-form-control" 
                    type="text" name="img" placeholder="image url">
                <input class="form-control yelp-form-control" 
                    type="text" name="desc" placeholder="description">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </form>
            <a href="/campgrounds" class="yelp-form-control">Go back</a>
        
        </div>
    </div>

<% include ../partials/footer %>