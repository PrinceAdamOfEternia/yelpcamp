<% include ../partials/header %>

    <div class="container">
        <h1 style="text-align: center;">Update the details for <%= campground.name %> </h1>
        <div style="width: 30%; margin: 30px auto">
            <form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST">
                <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>" style="margin: 3px 0">
                <input class="form-control" type="number" name="campground[price]" value="<%= campground.price %>" style="margin: 3px 0" min="0.00" step="0.10">
                <input class="form-control" type="text" name="campground[image]" value="<%= campground.image %>" style="margin: 3px 0">
                <input class="form-control" type="text" name="campground[description]" value="<%= campground.description %>" style="margin: 3px 0">
                <button class="btn btn-lg btn-primary btn-block">Update!</button>
            </form>
            <a href="/campgrounds" style="margin: 3px 0">Go back</a>
        
        </div>
    </div>

<% include ../partials/footer %> 